{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Backend (Node.js)",
            "runtimeExecutable": "node",
            "runtimeArgs": [
                "--loader",
                "ts-node/esm"
            ],
            "args": [
                "${workspaceFolder}/back-end/src/app.ts"
            ],
            "cwd": "${workspaceFolder}/back-end",
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/**"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "envFile": "${workspaceFolder}/back-end/.env",
            "env": {
                "NODE_ENV": "development"
            },
            "outFiles": [
                "${workspaceFolder}/back-end/dist/**/*.js"
            ],
            "resolveSourceMapLocations": [
                "${workspaceFolder}/back-end/**",
                "!**/node_modules/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Backend with Nodemon",
            "runtimeExecutable": "nodemon",
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "cwd": "${workspaceFolder}/back-end",
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/**"
            ],
            "envFile": "${workspaceFolder}/back-end/.env",
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "type": "firefox",
            "request": "launch",
            "name": "Debug Frontend (Firefox)",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/front-end",
            "reAttach": true,
            "pathMappings": [
                {
                    "url": "http://localhost:5173",
                    "path": "${workspaceFolder}/front-end"
                }
            ],
            "skipFiles": [
                "**/node_modules/**"
            ],
            "preLaunchTask": "Start Frontend Dev Server"
        },
        {
            "type": "firefox",
            "request": "attach",
            "name": "Attach to Firefox",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/front-end",
            "pathMappings": [
                {
                    "url": "http://localhost:5173",
                    "path": "${workspaceFolder}/front-end"
                }
            ]
        },
        {
            "type": "node-terminal",
            "name": "JavaScript Debug Terminal",
            "request": "launch",
            "cwd": "${workspaceFolder}"
        }
    ],
    "compounds": [
        {
            "name": "Debug Full Stack (Frontend + Backend)",
            "configurations": [
                "Debug Backend with Nodemon",
                "Debug Frontend (Firefox)"
            ],
            "presentation": {
                "hidden": false,
                "group": "Full Stack",
                "order": 1
            },
            "stopAll": true
        }
    ]
}